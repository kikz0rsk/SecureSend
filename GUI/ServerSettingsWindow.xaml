<Window x:Class="SecureSend.GUI.ServerSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecureSend.GUI"
        mc:Ignorable="d"
        Title="Incoming connections settings" Height="156" Width="381" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner">
    <Grid Margin="30,10,30,10">
        <Label Content="Port" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="-130,54,0,0"/>
        <Button x:Name="okButton" Content="OK" HorizontalAlignment="Center" Margin="0,92,0,0" VerticalAlignment="Top" Height="22" Width="116" Click="okButton_Click"/>
        <CheckBox x:Name="allowServer" Content="Allow incoming connections" HorizontalAlignment="Center" Margin="0,8,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="portTextbox" HorizontalAlignment="Center" Margin="40,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="22"/>
        <CheckBox x:Name="allowUpnp" Content="Allow UPnP port forward" HorizontalAlignment="Center" Margin="0,28,0,0" VerticalAlignment="Top" />
    </Grid>
</Window>
