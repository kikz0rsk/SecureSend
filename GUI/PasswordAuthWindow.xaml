<Window x:Class="SecureSend.GUI.PasswordAuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecureSend.GUI"
        mc:Ignorable="d"
        Title="Zadajte prihlasovacie údaje" Height="142" Width="320" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid Margin="10,10,10,10">
        <TextBox x:Name="username" HorizontalAlignment="Left" Margin="86,9,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="211" Height="24" VerticalContentAlignment="Center"/>
        <Label Content="Prihlasovacie&#xD;&#xA;meno" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="86,47,0,0" VerticalAlignment="Top" Width="211" Height="24" VerticalContentAlignment="Center"/>
        <Label Content="Heslo" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,46,0,0"/>
        <Button x:Name="button" Content="Prihlásiť sa" HorizontalAlignment="Center" Margin="0,84,0,0" VerticalAlignment="Top" Height="22" Width="116" Click="connectBtn_Click"/>
    </Grid>
</Window>
