<Window x:Class="SecureSend.GUI.AcceptConnection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecureSend.GUI"
        mc:Ignorable="d"
        Title="AcceptConnection" Height="231" Width="396" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid>
        <Label Content="Nové nedôveryhodné zariadenie" HorizontalAlignment="Left" Margin="11,10,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" UseLayoutRounding="False"/>
        <Label Content="IP Adresa" HorizontalAlignment="Left" Margin="11,74,0,0" VerticalAlignment="Top" Height="25"/>
        <Label x:Name="ipAddr" Content="" HorizontalAlignment="Left" Margin="87,74,0,0" VerticalAlignment="Top"/>
        <Label Content="Identita" HorizontalAlignment="Left" Margin="11,108,0,0" VerticalAlignment="Top" Height="25"/>
        <Label x:Name="identity" Content="" HorizontalAlignment="Left" Margin="87,108,0,0" VerticalAlignment="Top"/>
        <Label x:Name="question" Content="Chcete povoliť tomuto zariadeniu sa pripojiť?" Margin="10,138,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="15"/>
        <Button x:Name="acceptOnce" Content="Tentokrát povoliť" HorizontalAlignment="Left" Margin="10,176,0,10" VerticalAlignment="Top" Height="25" Width="120" Click="acceptOnce_Click"/>
        <Button x:Name="acceptRemember" Content="Povoliť a zapamätať" HorizontalAlignment="Left" Margin="142,176,0,10" VerticalAlignment="Top" Height="25" Width="143" Click="acceptRemember_Click"/>
        <Button x:Name="reject" Content="Nepovoliť" HorizontalAlignment="Left" Margin="295,176,10,10" VerticalAlignment="Top" Height="25" Width="91" Click="reject_Click"/>
        <Label Content="Toto zariadenie nie je v zozname dôveryhodných zariadení." HorizontalAlignment="Left" Margin="11,47,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
