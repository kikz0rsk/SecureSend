        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BP"
        mc:Ignorable="d"
        Title="MainWindow" Width="653" Height="420" Loaded="OnWindowLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="21.04"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StatusBar Grid.Row="1">
            <StatusBarItem x:Name="statusText" Content="Status" Height="22" VerticalAlignment="Center" Width="575"/>
            <StatusBarItem x:Name="statusPortText" Content="Port" Height="22" VerticalAlignment="Center" Width="62"/>
        </StatusBar>

    </Grid>
</Window>
